
@{
    ViewBag.Title = "Index";
    List<ZimconBackOffice.Model.Vehicle> vehicles = Model;
    var count = 1;
}

<div class="row">
    <div class="col-md-8">
            <div class="card">
                <div class="header">
                    <h4 class="title">Vehicles</h4>
                </div>
                <div class="content table-responsive table-full-width">
                    <table class="table table-striped">
                        <thead>
                        <th>ID</th>
                        <th>Make</th>
                        <th>Model</th>
                        <th>License</th>
                        <th>Year</th>
                        </thead>
                        <tbody>
                        @foreach (var car in vehicles)
                        {
                            <tr>
                                <td>@count</td>
                                <td>@car.make</td>
                                <td>@car.model</td>
                                <td>@car.licenseId</td>
                                <td>@car.year</td>
                            </tr>
                            count++;
                        }
                        </tbody>
                    </table>
                </div>
            </div>

    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="header">
                <h4 class="title">Add New Vehicle</h4>
            </div>
            <div class="content">
                <form>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>License Number</label>
                                <input type="text" class="form-control border-input" placeholder="License Number" value="" id="licenseNumber">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Vehicle Year</label>
                                <select class="form-control" id="vehicleYearOption"></select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="vehicleModelSelector">Select Vehicle Model</label>
                                <select class="form-control" id="vehicleModelSelector">
                                    <option>Volvo</option>
                                    <option>Mercedes Benz</option>
                                    <option>Toyota</option>
                                    <option>Nissan</option>
                                    <option>Mahindra</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Vehicle Make</label>
                                <input type="text" class="form-control border-input" placeholder="Vehicle Make" value="" id="vehicleMake">
                            </div>
                        </div>
                    </div>
                    <div class="pull-left">
                        <button type="button" class="btn btn-info btn-fill btn-wd" id="submitVehicle">Submit</button>
                    </div>
                    <div class="clearfix"></div>
                </form>
            </div>
        </div>
    </div>
</div>



