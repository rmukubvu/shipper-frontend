@using Shipper.RestGateway.Model
@{
    ViewBag.Title = "Index";
    List<Vehicle> vehicles = Model;
    var count = 1;
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="header">
                <h4 class="title">Vehicles</h4>
            </div>
            <div class="content table-responsive table-full-width">
                <table class="table table-striped">
                    <tr>
                        @*<th>ID</th>*@
                        <th>License</th>
                        <th>Make</th>
                        <th>Model</th>
                        <th>Year</th>
                        <th></th>
                    </tr>
                    <tbody>
                        @foreach (var car in vehicles)
                        {
                            <tr>
                                @*<td>@count</td>*@
                                <td>@car.licenseId</td>
                                <td>@car.make</td>
                                <td>@car.model</td>
                                <td>@car.year</td>
                                <td><a href=""><i class="fa fa-edit"></i></a></td>
                            </tr>
                            //count++;
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="header">
                <h4 class="title" ><i class="fas fa-truck-moving"></i> Add New Vehicle</h4>
            </div>
            <div class="content">
                <form>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>License Number</label>
                                <input type="text" class="form-control border-input" placeholder="License Number" value="" id="licenseNumber">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Make</label>
                                <select class="form-control" id="vehicleModelSelector">
                                    <option>Volvo</option>
                                    <option>Mercedes Benz</option>
                                    <option>Toyota</option>
                                    <option>Nissan</option>
                                    <option>Mahindra</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="vehicleModelSelector">Model</label>
                                <select class="form-control" id="vehicleModelSelector">
                                    <option>Volvo</option>
                                    <option>Mercedes Benz</option>
                                    <option>Toyota</option>
                                    <option>Nissan</option>
                                    <option>Mahindra</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Year</label>
                                <select class="form-control" id="vehicleYearOption"></select>
                            </div>
                        </div>
                    </div>
                    <div class="pull-left">
                        <button type="button" class="btn btn-info btn-fill btn-wd" id="submitVehicle">Submit</button>
                    </div>
                    <div class="clearfix"></div>
                </form>
            </div>
        </div>
    </div>
</div>



