@{
    ViewBag.Title = "ViewShipments";
    List<Shipper.RestGateway.Model.Shipment> shipmentOnCar = Model;
}

@if (shipmentOnCar.Count == 0)
{
    <div class="row">
        <div class="col-md-12">
            <div class="callout callout-warning">
                <h4>Shipments on Vehicle!</h4>
                <p>There are no shipments loaded on this vehicle.</p>
            </div>
        </div>
    </div>
}
else
{

<div class="row">
    @foreach (var shipment in shipmentOnCar)
    {
        <div class="col-md-4">
            <!-- Widget: user widget style 1 -->
            <div class="box box-widget widget-user">
                <!-- Add the bg color to the header using any of the bg-* classes -->
                <div class="widget-user-header bg-aqua-active">
                    <h3 class="widget-user-username">@shipment.consignee</h3>
                    <h5 class="widget-user-desc">@shipment.manifestReference</h5>
                    <h5 class="widget-user-desc">@shipment.contents</h5>
                </div>
                <div class="widget-user-image">
                    <img class="img-circle" src="../dist/img/avatar.png" alt="User Avatar">
                </div>
                <div class="box-footer">
                    <div class="row">
                        <div class="gmap_canvas">
                            <iframe width="100%" height="300" id="gmap_canvas" src="https://maps.google.com/maps?q=@shipment.latitude,@shipment.longitude&t=&z=15&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
                        </div>
                        <style>
                            .mapouter {
                                text-align: right;
                                height: 300px;
                                width: 100%;
                            }

                            .gmap_canvas {
                                overflow: hidden;
                                background: none !important;
                                height: 300px;
                                width: 100%;
                            }
                        </style>
                    </div>
                    <div class="row">
                        <div class="col-sm-4 border-right">
                            <div class="description-block">
                                <h5 class="description-header">@shipment.wayBill</h5>
                                <span class="description-text">WAYBILL</span>
                            </div>
                            <!-- /.description-block -->
                        </div>
                        <!-- /.col -->
                        <div class="col-sm-4 border-right">
                            <div class="description-block">
                                <h5 class="description-header">@shipment.status</h5>
                                <span class="description-text">STATUS</span>
                            </div>
                            <!-- /.description-block -->
                        </div>
                        <!-- /.col -->
                        <div class="col-sm-4">
                            <div class="description-block">
                                <h5 class="description-header">@shipment.manifestReference</h5>
                                <span class="description-text">MANIFEST</span>
                            </div>
                            <!-- /.description-block -->
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </div>
            </div>
            <!-- /.widget-user -->
        </div>
    }
</div>
}

<script type="text/javascript">
    function hideOverLay() {
        window.FakeLoader.hideOverlay();
    }
    window.onload = hideOverLay;
</script>