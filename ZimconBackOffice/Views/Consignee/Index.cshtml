                    </div>
                    <div class="pull-left">
                        <button type="submit" class="btn btn-info btn-fill btn-wd" id="submitConsigneeContact">Submit</button>
                    </div>
                    <div class="clearfix"></div>
                </form>
            </div>
        </div>
        @* } *@
    </div>
</div>

