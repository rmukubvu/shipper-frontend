@model IEnumerable<ZimconBackOffice.Models.UserViewModel>
@{
    ViewBag.Title = "User";
}

<div class="row container">
    <div class="col-md-8">
        <div class="card">
            <div class="header">
                <h4 class="title">User</h4>
            </div>
            <div class="content table-responsive table-full-width">
                <table class="table table-striped">
                    <tr>

                        <th>Created Date</th>
                        <th>Consignee</th>
                        <th>Email Address</th>
                        <th>Contact</th>
                        <th>Country</th>
                        <th></th>
                    </tr>
                    <tbody>
                        @foreach (var user in Model)
                        {
                        <tr>
                            <td class="hidden">@user.id</td>
                            <td class="hidden">@user.consigneeId</td>
                            <td class="hidden">@user.password</td>
                            <td>@user.createdDate.ToShortDateString()</td>
                            <td>@user.consignee.name</td>

                            <td>@user.emailAddress</td>

                            <td>@user.consignee.contactNumber</td>
                            <td>@user.consignee.country</td>
                            <td>
                                <a class="editUser">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="header">
                <h4 class="title"><i class="fa fa-user-circle"></i> Add New User</h4>
            </div>
            <div class="content">
                <form>
                    <div class="row hidden">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>UserId</label>
                                <input type="text" class="form-control border-input" placeholder="" value="" id="userId">
                            </div>
                        </div>
                    </div>
                    <div class="row hidden">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>UserId</label>
                                <input type="text" class="form-control border-input" placeholder="" value="" id="consigneeId">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Consignee</label>
                                <input type="text" class="form-control border-input" placeholder="" value="" id="consigneeName">
                            </div>
                        </div>
                    </div>
                    @*<div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Device</label>
                                <select class="form-control" id="deviceSelector">
                                    @foreach (var device in deviceAllocationViewModel.Devices)
                                    {
                                        <option value="@device.deviceId">@device.make - @device.model - @device.deviceId</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>*@
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Email Address</label>
                                <input type="text" class="form-control border-input" placeholder="" value="" id="email">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Password</label>
                                <input type="text" class="form-control border-input" placeholder="" value="" id="password">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Confirm Password</label>
                                <input type="text" class="form-control border-input" placeholder="" value="" id="password2">
                            </div>
                        </div>
                    </div>
                    <div class="row hidden">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Created date</label>
                                <input type="text" class="form-control border-input" placeholder="" value="" id="createdDate">
                            </div>
                        </div>
                    </div>
                    <div class="pull-left">
                        <button type="button" class="btn btn-info btn-fill btn-wd" id="submitUser">Submit</button>
                    </div>
                    <div class="clearfix"></div>
                </form>
            </div>
        </div>
    </div>


</div>






